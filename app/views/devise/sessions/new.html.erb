<div class="row">
  <div class="center-block col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">Sign in to enter</div>
      <div class="panel-body text-center">
        <h2>Sign in</h2>
        <%= devise_error_messages! %>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div><%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, as: :email %>
          </div>

          <div><%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", as: :password %>
          </div>

          <div><br \><%= f.submit "Sign in", class: 'btn btn-primary' %><br \></div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
